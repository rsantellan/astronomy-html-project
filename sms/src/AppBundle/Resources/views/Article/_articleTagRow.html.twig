<tr id="article_tag_row_{{ tag.id}}">
    <td>{{ tag.name }}</td>
    <td>
        <a href="{{ path('admin_article', { 'tag': tag.id }) }}" class="btn"><i class="fa fa-eye"></i></a>
        <a href="{{ path('admin_article_tag_edit', { 'id': tag.id }) }}" class="btn" onclick='return showArticleCategoryModal(this);'><i class="fa fa fa-pencil"></i></a>
        <a href="{{ path('admin_article_tag_delete', { 'id': tag.id }) }}" class="btn" onclick='return removeArticleTag(this, "{% trans %}article_tags_remove_question{% endtrans %}");'><i class="fa fa fa-remove"></i></a>
    </td>
</tr>