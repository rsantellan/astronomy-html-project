{% extends 'AppBundle::adminlayout.html.twig' %}
{% block pagestylesheets %}
{% endblock %}
{% block javascripts %}
  <script src="{{ asset('bundles/app/admin/tinymce/tinymce.min.js') }}"></script>
  <script src="{{ asset('bundles/app/admin/js/basicstarttinymce.js') }}"></script>
{% endblock %}

{% block body -%}
<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">{% trans %}article_create_entry{% endtrans %}</header>
      <div class="panel-body">
        <form action="{{ path('admin_article_create') }}" method="post" {{ form_enctype(form) }} role="form">
          <div class="form-group">
            {{ form_errors(form.title) }}
            <label for="{{ form.title.vars.id }}">{% trans %}article_title{% endtrans %}</label>
            {{ form_widget(form.title, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
            {{ form_errors(form.excerpt) }}
            <label for="{{ form.excerpt.vars.id }}">{% trans %}article_excerpt{% endtrans %}</label>
            {{ form_widget(form.excerpt, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
            {{ form_errors(form.description) }}
            <label for="{{ form.description.vars.id }}">{% trans %}article_description{% endtrans %}</label>
            {{ form_widget(form.description, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
            {{ form_errors(form.categories) }}
            <label for="{{ form.categories.vars.id }}">{% trans %}article_categories{% endtrans %}</label>
            {{ form_widget(form.categories, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
            {{ form_errors(form.tags) }}
            <label for="{{ form.tags.vars.id }}">{% trans %}article_tags{% endtrans %}</label>
            {{ form_widget(form.tags, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="checkbox">
            {{ form_errors(form.active) }}  
            <label>
                {{ form_widget(form.active, {'attr' : {'class' : ''}}) }}{% trans %}article_active{% endtrans %}
            </label>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-default">{% trans %}article_save{% endtrans %}</button>
          </div>	
              {{ form_rest(form) }}
          </form>
        </div>
      </section>
    </div>
    <div class="col-lg-12 text-center">
	  <a href="{{ path('admin_article') }}" class="btn btn-info">
		  {% trans %}article_back_to_list{% endtrans %}
	  </a>
	</div>
</div>
{% endblock %}
