{% extends 'AppBundle::adminlayout.html.twig' %}

{% block pagestylesheets %}
  <link rel="stylesheet" type="text/css" href="{{ asset('bundles/maithcommonimage/css/maithalbums.css') }}" />
  <link rel="stylesheet" type="text/css" href="{{ asset('bundles/maithcommonadmin/css/colorbox.css') }}" />
{% endblock %}
{% block javascripts %}
  <script type="text/javascript" src="{{ asset('bundles/maithcommonadmin/js/jquery.colorbox-min.js') }}"></script>    
  <script type="text/javascript" src="{{ asset('bundles/maithcommonimage/js/imagesManager.js') }}"></script>    
{% endblock %}


{% block body -%}
<div class="row">
  <div class="col-lg-8">
    <section class="panel">
      <header class="panel-heading">{% trans %}integrante_update_entry{% endtrans %}</header>
      <div class="panel-body">
        <form action="{{ path('admin_integrante_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} role="form">
          <input type="hidden" name="_method" value="PUT" />  
          <div class="form-group">
              {{ form_errors(edit_form.name) }}
              <label for="{{ edit_form.name.vars.id }}">{% trans %}integrante_name{% endtrans %}</label>
              {{ form_widget(edit_form.name, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
              {{ form_errors(edit_form.position) }}
              <label for="{{ edit_form.position.vars.id }}">{% trans %}integrante_position{% endtrans %}</label>
              {{ form_widget(edit_form.position, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
              {{ form_errors(edit_form.description) }}
              <label for="{{ edit_form.description.vars.id }}">{% trans %}integrante_description{% endtrans %}</label>
              {{ form_widget(edit_form.description, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
              {{ form_errors(edit_form.googleaccount) }}
              <label for="{{ edit_form.googleaccount.vars.id }}">{% trans %}integrante_googleaccount{% endtrans %}</label>
              {{ form_widget(edit_form.googleaccount, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
              {{ form_errors(edit_form.twitteraccount) }}
              <label for="{{ edit_form.twitteraccount.vars.id }}">{% trans %}integrante_twitteraccount{% endtrans %}</label>
              {{ form_widget(edit_form.twitteraccount, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
              {{ form_errors(edit_form.facebookaccount) }}
              <label for="{{ edit_form.facebookaccount.vars.id }}">{% trans %}integrante_facebookaccount{% endtrans %}</label>
              {{ form_widget(edit_form.facebookaccount, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
              {{ form_errors(edit_form.posicionVisual) }}
              <label for="{{ edit_form.posicionVisual.vars.id }}">{% trans %}integrante_posicionVisual{% endtrans %}</label>
              {{ form_widget(edit_form.posicionVisual, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-default">{% trans %}integrante_save{% endtrans %}</button>
          </div>	
              {{ form_rest(edit_form) }}
          </form>
	  
	  {{ render(controller('MaithCommonAdminBundle:Albums:albumsData', {'id': entity.id, 'objectclass' : entity.fullClassName, 'listmode' : false }))}}
        </div>
      </section>
    </div>
    <div class="col-lg-8">
        <a href="{{ path('admin_integrante') }}" class="btn btn-info">
		  {% trans %}integrante_back_to_list{% endtrans %}
	  </a>
		<form action="{{ path('admin_integrante_delete', { 'id': entity.id }) }}" method="post" onsubmit="return confirmDeleteDialog();" style="float: right;">
		  <input type="hidden" name="_method" value="DELETE" />
			{{ form_widget(delete_form) }}
		  <button class="btn btn-danger" type="submit">{% trans %}integrante_delete{% endtrans %}</button>
		</form>
	</div>	
    
</div>  
{% endblock %}
