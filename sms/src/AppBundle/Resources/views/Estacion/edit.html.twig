{% extends 'AppBundle::adminlayout.html.twig' %}

{% block pagestylesheets %}
{% endblock %}
{% block javascripts %}
{% endblock %}


{% block body -%}
<div class="row">
  <div class="col-lg-8">
    <section class="panel">
      <header class="panel-heading">{% trans %}estacion_update_entry{% endtrans %}</header>
      <div class="panel-body">
        <form action="{{ path('admin_estacion_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} role="form">
          <input type="hidden" name="_method" value="PUT" />  
          <div class="form-group">
              {{ form_errors(edit_form.name) }}
              <label for="{{ edit_form.name.vars.id }}">{% trans %}estacion_name{% endtrans %}</label>
              {{ form_widget(edit_form.name, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
              {{ form_errors(edit_form.position) }}
              <label for="{{ edit_form.position.vars.id }}">{% trans %}estacion_position{% endtrans %}</label>
              {{ form_widget(edit_form.position, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
              {{ form_errors(edit_form.location) }}
              <label for="{{ edit_form.location.vars.id }}">{% trans %}estacion_location{% endtrans %}</label>
              {{ form_widget(edit_form.location, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-default">{% trans %}estacion_save{% endtrans %}</button>
          </div>	
              {{ form_rest(edit_form) }}
          </form>
        </div>
      </section>
    </div>
    <div class="col-lg-8">
        <a href="{{ path('admin_estacion') }}" class="btn btn-info">
		  {% trans %}estacion_back_to_list{% endtrans %}
	  </a>
		<form action="{{ path('admin_estacion_delete', { 'id': entity.id }) }}" method="post" onsubmit="return confirmDeleteDialog();" style="float: right;">
		  <input type="hidden" name="_method" value="DELETE" />
			{{ form_widget(delete_form) }}
		  <button class="btn btn-danger" type="submit">{% trans %}estacion_delete{% endtrans %}</button>
		</form>
	</div>	
    
</div>  
{% endblock %}