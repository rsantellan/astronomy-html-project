{% extends 'AppBundle::layout.html.twig' %}

{% block stylesheets %}
{% endblock %}
{% block javascripts %}
{% endblock %}

{#% trans_default_domain 'FOSUserBundle' %#}

{% block body %}

  <!--======= SUB BANNER =========-->
  <section class="sub-banner bg-parallax" style="background:url({{ asset('images/sg.jpg') }}) no-repeat">
    <div class="container">
      <div class="position-center-center">
        <h1>Acerca del proyecto</h1>
      </div>
    </div>
  </section>

  <!-- Content -->
  <div id="content">
    <section class="shop padding-top-100 padding-bottom-100">
      <div class="container">



        <div class="shopping-cart check-out"> 
          <div class="cart-ship-info">
            <div class="row"> 

              <!-- ESTIMATE SHIPPING & TAX -->

              <div class="col-sm-12">
                <h5 class="font-14px margin-bottom-30 letter-space-2">INICIAR SESIÓN</h5>
                <form action="{{ path("fos_user_security_check") }}" method="post" accept-charset="utf-8">

                  <ul class="row">

                    <!-- Name -->
                    <li class="col-md-6">
                      <label> *NOMBRE DE USUARIO O CORREO ELECTRÓNICO
                        <input name="_username" required="required" value="{{ last_username }}" type="text" class="" autofocus>
                      </label>
                    </li>
                    <!-- LAST NAME -->
                    <li class="col-md-6">
                      <label> *CONTRASEÑA
                        <input type="password" name="_password" required="required" class="">
                      </label>
                    </li>
                  </ul>
                  <button class="waves-effect waves-ripple btn btn-small btn-dark pull-right" type="submit" name="_submit">INGRESAR</button>
                  <a href="{{ path('fos_user_resetting_request')}}">¿Olvidaste la contraseña?</a>
                  <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                </form>
              {% if error %}
                <div style="font-weight: bold; color: red;">{{ error }} {#{ error.messageKey|trans(error.messageData, 'security') }#}</div>
              {% endif %}
                
              </div>
            </div>
          </div>
        </div>

    </section> 

  </div>
  <!-- News Letter -->
  {{ render(controller('AppBundle:Default:newsletterForm')) }}
  <!-- End Content -->   
{% endblock %}
